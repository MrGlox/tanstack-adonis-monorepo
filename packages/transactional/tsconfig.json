{
    "extends": "@repo/config-typescript/react-library.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}